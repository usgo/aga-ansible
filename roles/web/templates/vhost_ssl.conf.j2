<IfModule mod_ssl.c>
    <VirtualHost {{ item.hostname }}:443>
        DocumentRoot "/www/{{ item.hostname }}"
        ServerName "{{ item.hostname }}"

        ServerAdmin "{{ item.serveradmin }}"

        Include "/etc/apache2/usgo_extra_conf/{{ item.hostname }}.extras.conf"

        {% if item.extra_params is defined %}
          {{ item.extra_params }}
        {% endif %}

        Include /etc/letsencrypt/options-ssl-apache.conf
        SSLCertificateFile /etc/letsencrypt/live/{{ item.hostname }}/fullchain.pem
        SSLCertificateKeyFile /etc/letsencrypt/live/{{ item.hostname }}/privkey.pem
    </VirtualHost>
</IfModule>
